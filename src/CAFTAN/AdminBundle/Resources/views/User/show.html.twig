{% extends "CAFTANAdminBundle::layout.html.twig" %}
{% block section %}
    <h1>la table Utilisateurs </h1>
    <ul>
        <li class="btn btn-success"><a href="{{path('caftan_admin_create_users')}}">create</a></li>
    </ul>
    <table class="table table-bordered"> 

        <thead> 
            <tr> 
                <td>id</td>
                <td>Nom</td> 
                <td>Pr√©nom</td> 
                <td>Username</td> 
                <td>Password</td> 
                <td>Roles</td>
                <td>Createur</td> 
                <td>Email</td> 
                <td>Tel</td>
                <td>Image</td> 
                <td>Adresse</td>
               
                

            </tr> 
        </thead> 
        <tbody> 


            {% for user in users %}
               
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.nom}}</td>
                    <td>{{user.prenom}}</td>
                    <td>{{user.username}}</td>
                    <td>{{user.password}}</td>
                    <td>{{user.roles[0]}}</td>
                    <td>{{user.createur}}</td>
                    <td>{{user.email}}</td>
                    <td>{{user.tel}}</td>
                    {% if user.image !="" %}
                        <td>{{user.image.id}}</td>
                    {% else %}
                             <td>Null</td>
                    {% endif %}
                    {% if user.adress !=""  %}
                        <td>{{user.adress.id}}</td>
                   
                    {% else %}
                        <td>Null</td>
                    {% endif %}
                    
                    <td class="btn btn-success"><a href="{{path('caftan_admin_delete_users', { 'id': user.id })}}">delete</a></td>
                    <td class="btn btn-success"><a href="{{path('caftan_admin_update_users', { 'id': user.id })}}">update</a></td>

                </tr>
                
            {% endfor %}

        </tbody> 
    </table>

{% endblock %}
