 
{% extends "CAFTANAppBundle::base.html.twig" %}
{% block section %}
    <div class="container connectionPage "  >

        <div class="row "  >
            <h1 class="marginR ">Bienvenue!</h1>

            {% if error %}
                <div style="font-size:15px;  color:red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login_check') }}" method="post">
                <fieldset class="col-md-12">
                    <input class="email" type="text" placeholder="Username" id="username" name="_username" value="{{ last_username }}" />
                </fieldset>
                <fieldset class="col-md-12">
                    <input class="email" type="password" placeholder="Password" id="password" name="_password" />
                </fieldset>
                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <fieldset class="col-md-12">
                    <input  type="submit" name="creat" value="se connecter" id="submit" class="button">
                </fieldset>
            </form>
        </div>
    </div>
    
{% endblock %}