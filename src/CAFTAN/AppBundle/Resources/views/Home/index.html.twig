                    <h1 class="">Les dernières annonces:</h1>
                </div> <!-- /.col-md-12 -->
            </div> <!-- /.row -->
            <div class="row advert">
                {%for advert in adverts %}
                <div class="col-md-3 col-sm-6">
                    <div class="product-item">
                        <div class="item-thumb">
                           
                            <div class="overlay">
                                <div class="overlay-inner">
                                    <a href="{{path('caftan_app_annoncepage', {'id': advert.id})}}" class="view-detail">Plus de détails</a>
                                </div>
                            </div> <!-- /.overlay -->
                            {% if advert.image == NULL %}
                             <img src="../../../web/images/nosCreateurs/noProfil.jpg" alt="image non ajoutée">
                            {% else %}
                                <img style="height:255px !important;width:255px !important;" src="{{asset(advert.image.webPath)}}" alt="{{advert.image.alt}}">
                           
                           ´{% endif %}
                        </div> <!-- /.item-thumb -->
                        <h3>{{advert.annonceur.adress.cp}} {{advert.annonceur.adress.localite}} {{advert.annonceur.adress.pays}}</h3>
                        <span>Prix:  <em class="price">{{advert.prix}}€</em></span>
                    </div> <!-- /.product-item -->
                </div> <!-- /.col-md-3 -->
                {% endfor %}
                <div class="col-md-12 col-sm-9">
                    <a class="plus" href="{{path('caftan_app_annoncespage', {page:1})}}"><p>Voir plus</p></a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
