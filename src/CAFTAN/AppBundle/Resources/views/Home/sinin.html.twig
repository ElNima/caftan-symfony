 
{% extends "CAFTANAppBundle::base.html.twig" %}
{% block section %}
<div class="container connectionPage "  >
        
        <div class="row "  >
        <h1 class="marginR ">Bienvenue!</h1>
            <div class="col-md-3 col-sm-6 resp" >
                <h3>Je crée un compte:</h3>  
                <div class="form_register" style="">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post" class="formCon contact-form">
                <div class="form-group">
                    {{ form_label(form.nom, "Nom :")}}
                    <div class="col-lg-7">
                        {{ form_widget(form.nom, {'attr': {'class': 'name'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
  
                <div class="form-group">
                    {{ form_label(form.prenom, "Prénom :")}}
                    <div class="col-lg-7">
                        {{ form_widget(form.prenom, {'attr': {'class': 'name'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
  
                <div class="form-group">
                    {{ form_label(form.username, "username :")}}
                    <div class="col-lg-7">
                        {{ form_widget(form.username, {'attr': {'class': 'name'}}) }}
                        {{ form_errors(form.username) }}
                    </div>
                </div>
                    
                <div class="form-group">
                    <label for="email">E-mail:</label>
                    <div class="col-lg-7">
                        <input placeholder="E-mail institutionel" type="email" required="required" class="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" />
                    </div>
                </div>
  
                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <div class="col-lg-7">
                        <input placeholder="Mot de passe" type="password" required="required" class="email" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" />
                    </div>
                </div>
  
                <div class="form-group">
                    <label class="col-lg-4 control-label" for="password">Vérification :</label>
                    <div class="col-lg-7">
                        <input placeholder="Mot de passe" type="password" required="required" class="form-control" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" />
                    </div>
                </div>
  
                <div class="form-group">
                    <div class="col-lg-offset-5">
                        <input type="submit" id="_submit"  name="_submit" value="Inscription" class="btn" />
                    </div>
                </div>
            </form>
         
            </div> <!-- /.col-md-3 --> 
        
        </div>
    </div>
    
{% endblock %}